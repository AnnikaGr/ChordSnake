<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx"
            fx:controller="com.game.chordsnake.FXMLController">
    <bottom>
        <Button mnemonicParsing="false" onMouseClicked="#confirmSong" text="Confirm" BorderPane.alignment="CENTER">
            <font>
                <Font name="Open Sans Regular" size="24.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="20.0" top="20.0"/>
            </BorderPane.margin>
        </Button>
    </bottom>
    <center>
        <HBox alignment="CENTER" prefHeight="300.0" prefWidth="500.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="song1" fitHeight="126.0" fitWidth="129.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/piano.png"/>
                    </image>
                    <HBox.margin>
                        <Insets left="20.0" right="20.0"/>
                    </HBox.margin>
                </ImageView>
                <ImageView fx:id="song2" fitHeight="126.0" fitWidth="129.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/guitar.png"/>
                    </image>
                    <HBox.margin>
                        <Insets left="20.0" right="20.0"/>
                    </HBox.margin>
                </ImageView>
                <ImageView fx:id="song3" fitHeight="126.0" fitWidth="129.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/cello.png"/>
                    </image>
                    <HBox.margin>
                        <Insets left="20.0" right="20.0"/>
                    </HBox.margin>
                </ImageView>
            </children>
        </HBox>
    </center>
    <top>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Please select your song" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="30.0"/>
            </BorderPane.margin>
            <font>
                <Font name="Open Sans Regular" size="36.0"/>
            </font>
        </Text>
    </top>
</BorderPane>
